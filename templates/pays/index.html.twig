{% extends 'back/base.html.twig' %}
{% block title%} Liste des pays{% endblock %}
{% block body %}
    {% if pays %}
    <section class="content">
      <div class="container-fluid">
        <div class="row">
        <div class="col-md-6">
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Tous les pays</h3>
              </div>
            <div class="card-body" >
           <a href="/pays/new" class="btn btn-secondary">Ajouter une pays</a>  
            </div>
        <div class="card-body">
                <table class="table table-bordered">
                <tr>
                 <th>Id</th>
                 <th>Nom</th>
                 <th>Code</th>
                 <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for opp in pays %}
                    <tr>
                        <td>{{ opp.id }}</td>
                        <td>{{ opp.libelle }}</td>
                        <td>{{ opp.code }}</td>
                        <td>            
                             <a href="/pays/delete/{{ opp.id }}" class="btn btn-danger"onclick="return confirm('Etes vous sÃ»r de supprimer ce departement?');">Supprimer</a>

                        </td>
                    </tr>
                {% endfor %}
             </tbody>
         </table>
        </div>
{% else %}
        <h1 align='center'>Aucune pays</h1>
        <div align='center' >
           <a href="/pays/new" class="btn btn-dark">Ajouter </a> </div>
        {% endif %}
{% endblock %}